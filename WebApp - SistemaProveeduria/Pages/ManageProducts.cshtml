@page
@model WebApp___SistemaProveeduria.Pages.ManageProductsModel
@{
}

<script src="~/js/products.js"></script>

<h1 class="text-center mt-4">Productos</h1>

<div class="bs-docs-section mt-2">
    <div>
        <h4 class="mt-3">Productos</h4>
        <table id="tblProducts" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Unidad de Medida</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div class="mt-5">
    <form>
        <fieldset>

            <input type="text" class="form-control" id="txtId" hidden>

            <div class="form-group">
                <label for="txtProductName" class="form-label mt-6">Nombre:</label>
                <input type="text" class="form-control" id="txtProductName" placeholder="Escriba el nombre del producto" name="txtProductName">
            </div>

            <div class="form-group mt-3">
                <label for="txtProductMeasurement" class="form-label mt-6">Unidad de medida:</label>
                <input type="text" class="form-control" id="txtProductMeasurement" placeholder="Escriba la unidad de medida del producto (si posee)" name="txtProductMeasurement">
            </div>

            <div class="bs-docs-section mt-2">
                <div>
                    <h4 class="mt-3">Impuestos</h4>
                    <div class="mt-3"></div>
                    <table id="tblTaxes" class="display" style="width:100%">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Valor</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>

            <div class="mt-5 d-flex justify-content-between">
                <button id="btnCreate" class="source-button btn btn-primary btn-xs" type="button" tabindex="8">Crear</button>
                <button id="btnUpdate" class="source-button btn btn-primary btn-xs" type="button" tabindex="8">Actualizar</button>
                <button id="btnCancel" class="source-button btn btn-primary btn-xs" type="button" tabindex="8">Cancelar</button>
            </div>

        </fieldset>
    </form>
</div>

