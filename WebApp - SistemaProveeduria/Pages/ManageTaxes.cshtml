@page
@model WebApp___SistemaProveeduria.Pages.ManageTaxesModel
@{
}

<script src="~/js/taxes.js"></script>

<h1 class="text-center mt-4">Impuestos</h1>

<div class="bs-docs-section mt-2">
    <div>
        <h4 class="mt-3">Impuestos</h4>
        <div class="mt-3"></div>
        <table id="tblTaxes" class="display" style="width:100%">
            <thead>
                <tr>
            <th scope="col">Producto</th>
            <th scope="col">Precio</th>
            <th scope="col">Unidades</th>
            <th scope="col">Fecha de registro</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<form>
    <fieldset>
        <input type="text" class="form-control" id="txtId" hidden>
        <div class="form-group">
            <label for="txtTaxName" class="form-label mt-6">Nombre:</label>
            <input type="text" class="form-control" id="txtTaxName" placeholder="Escriba el nombre del impuesto" name="txtTaxName">
        </div>

        <div class="form-group mt-3">
            <label for="txtTaxValue" class="form-label mt-6">Valor:</label>
            <input type="text" class="form-control" id="txtTaxValue" placeholder="Escriba el valor del impuesto" name="txtTaxValue">
        </div>

        <div class="mt-5 d-flex justify-content-between">
            <button id="btnCreate" class="source-button btn btn-primary btn-xs" type="button" tabindex="8">Crear</button>
            <button id="btnUpdate" class="source-button btn btn-primary btn-xs" type="button" tabindex="8">Actualizar</button>
            <button id="btnCancel" class="source-button btn btn-primary btn-xs" type="button" tabindex="8">Cancelar</button>
        </div>

    </fieldset>
</form>