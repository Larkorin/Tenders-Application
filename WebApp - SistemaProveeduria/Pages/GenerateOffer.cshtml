@page
@model WebApp___SistemaProveeduria.Pages.GenerateOfferModel
@{
}

<script src="~/js/generateOffers.js"></script>

<h1 class="text-center mt-4">Ofertar</h1>

<div class="mt-5">
    <form>
        <fieldset>
            <div class="form-group">
                <label for="txtTender" class="form-label mt-4">Id Licitación</label>
                <input type="text" class="form-control" id="txtTender" placeholder="" name="txtTender">
            </div>
            <div class="form-group">
                <label for="txtOfferPrice" class="form-label mt-4">Precio total de la oferta</label>
                <input type="number" class="form-control" id="txtOfferPrice" placeholder="Inserte el precio de la oferta" name="txtOfferPrice">
            </div>
            <div class="bs-docs-section mt-2">
                <div>
                    <h4 class="mt-3">Productos</h4>
                    <table id="tblProducts" class="display" style="width:100%">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Unidad de Medida</th>
                                <th>Estado</th>
                                <th>Cantidad</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </fieldset>
    </form>
    <div class="mt-5 d-flex justify-content-between">
        <button id="btnCreate" class="source-button btn btn-primary btn-xs" type="button" tabindex="8">Ofertar</button>
        <button id="btnCancel" class="source-button btn btn-primary btn-xs" type="button" tabindex="8">Cancelar</button>
    </div>
</div>