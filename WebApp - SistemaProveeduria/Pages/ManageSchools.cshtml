@page
@model WebApp___SistemaProveeduria.Pages.ManageSchoolsModel
@{
}

<script src="~/js/schools.js"></script>

<h1 class="text-center mt-4">Escuelas</h1>

<div class="bs-docs-section mt-2">
    <div>
        <h4 class="mt-3">Escuelas</h4>
        <div class="mt-3"></div>
        <table id="tblSchools" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Ubicacion</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<form>
    <fieldset>
            <input type="text" class="form-control" id="txtId" hidden>
        <div class="form-group">
            <label for="txtSchoolName" class="form-label mt-6">Nombre:</label>
            <input type="text" class="form-control" id="txtSchoolName" placeholder="Escriba el nombre de la escuela" name="txtSchoolName">
        </div>
        
        <div class="form-group mt-3">
            <label for="txtSchoolLocation" class="form-label mt-6">Ubiacación:</label>
            <input type="text" class="form-control" id="txtSchoolLocation" placeholder="Escriba la ubicación de la escuela" name="txtSchoolLocation">
        </div>

        <div class="mt-5 d-flex justify-content-between">
            <button id="btnCreate" class="source-button btn btn-primary btn-xs" type="button" tabindex="8">Crear</button>
            <button id="btnUpdate" class="source-button btn btn-primary btn-xs" type="button" tabindex="8">Actualizar</button>
            <button id="btnCancel" class="source-button btn btn-primary btn-xs" type="button" tabindex="8">Cancelar</button>
        </div>

    </fieldset>
</form>