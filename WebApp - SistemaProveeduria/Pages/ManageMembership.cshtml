@page
@model WebApp___SistemaProveeduria.Pages.ManageMembershipModel
@{
}

<script src="~/js/membershipsManagement.js"></script>

<h1 class="text-center mt-4">Membresías</h1>

<div class="bs-docs-section mt-2">
    <div>
        <h4 class="mt-3">Membresías</h4>
        <table id="tblMemberships" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div class="mt-5">
    <form>
        <fieldset>

            <input type="text" class="form-control" id="txtId" hidden>

            <div class="form-group">
                <label for="txtMembershipName" class="form-label mt-6">Nombre:</label>
                <input type="text" class="form-control" id="txtMembershipName" placeholder="Escriba el nombre de la membresía" name="txtMembershipName">
            </div>

            <div class="form-group mt-3">
                <label for="txtMembershipPrice" class="form-label mt-6">Precio:</label>
                <input type="number" class="form-control" id="txtMembershipPrice" placeholder="Escriba el precio de la membresía" name="txtMembershipPrice">
            </div>

            <div class="bs-docs-section mt-2">
                <div>
                    <h4 class="mt-3">Impuestos</h4>
                    <div class="mt-3"></div>
                    <table id="tblTaxes" class="display" style="width:100%">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Valor</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>

            <div class="mt-5 d-flex justify-content-between">
                <button id="btnCreate" class="source-button btn btn-primary btn-xs" type="button" tabindex="8">Crear</button>
                <button id="btnUpdate" class="source-button btn btn-primary btn-xs" type="button" tabindex="8">Actualizar</button>
                <button id="btnCancel" class="source-button btn btn-primary btn-xs" type="button" tabindex="8">Cancelar</button>
            </div>

        </fieldset>
    </form>
</div>
