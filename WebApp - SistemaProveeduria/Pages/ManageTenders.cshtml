@page
@model WebApp___SistemaProveeduria.Pages.ManageTendersModel
@{
}

<script src="~/js/tendersmanagement.js"></script>

<h1 class="text-center mt-4">Gestionar Licitaciones</h1>

<div class="bs-docs-section mt-2">
    <div>
        <h4 class="mt-3">Licitaciones</h4>
        <table id="tblTenders" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Título</th>
                    <th>Presupuesto</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div class="mt-5">
    <form>
        <fieldset>
            <input type="text" class="form-control" id="txtId" hidden>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="status" name="status">
                <label class="form-check-label" for="status">Licitación automática</label>
            </div>

            <div class="form-group">
                <label for="txtTitulo" class="form-label mt-4">Titulo:</label>
                <input type="text" class="form-control" id="txtTitulo" placeholder="Escriba el título" name="txtTitulo">
            </div>

            <div class="form-group">
                <label for="txtDescripcion" class="form-label mt-4">Descripcion:</label>
                <textarea rows="4" cols="50" class="form-control" id="txtDescripcion" name="txtDescripcion" placeholder="Escriba la descripción"></textarea>
            </div>

            <div class="form-group">
                <label for="txtPresupuesto" class="form-label mt-4">Presupuesto:</label>
                <input type="text" class="form-control" id="txtPresupuesto" placeholder="Escriba el presupuesto" name="txtPresupuesto">
            </div>

            <div class="form-group">
                <label for="dateCierreOfertas" class="form-label mt-4">Fecha de cierre de ofertas:</label>
                <input type="date" class="form-control" id="dateCierreOfertas" name="dateCierreOfertas">
            </div>
            
            <div class="form-group">
                <label for="dateCierreLicitacion" class="form-label mt-4">Fecha de cierre de licitación:</label>
                <input type="date" class="form-control" id="dateCierreLicitacion" name="dateCierreLicitacion">
            </div>

            <div class="form-group">
                <label for="dateEntrega" class="form-label mt-4">Fecha de entrega de licitación:</label>
                <input type="date" class="form-control" id="dateEntrega" name="dateEntrega">
            </div>

            <div class="form-group">
                <label for="txtUsuarioEncargado" class="form-label mt-4">Usuario encargado de la licitación:</label>
                <select class="form-select" id="txtUsuarioEncargado" name="txtUsuarioEncargado"></select>
            </div>

            <div class="form-group">
                <label for="txtEscuela" class="form-label mt-4">Escuela:</label>
                <select class="form-select" id="txtEscuela" name="txtEscuela"></select>
            </div>

            <div class="bs-docs-section mt-2">
                <div>
                    <h4 class="mt-3">Productos</h4>
                    <table id="tblProducts" class="display" style="width:100%">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Unidad de Medida</th>
                                <th>Estado</th>
                                <th>Cantidad</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>

            <div class="mt-5 d-flex justify-content-between">
                    <button id="btnCreate" class="source-button btn btn-primary btn-xs" type="button" tabindex="8">Crear</button>
                    <button id="btnUpdate" class="source-button btn btn-primary btn-xs" type="button" tabindex="8">Actualizar</button>
                    <button id="btnCancel" class="source-button btn btn-primary btn-xs" type="button" tabindex="8">Cancelar</button>
            </div>
        </fieldset>
    </form>
</div>

