@page
@model WebApp___SistemaProveeduria.Pages.InventoryModel
@{
}
<script src="~/js/Inventory.js"></script>

<h1 class="mt-5">Registro</h1>
<form>
    <fieldset>

        <input type="text" class="form-control" id="txtId" hidden>

        <div class="bs-docs-section mt-2">
            <div>
                <h4 class="mt-3">Inventario</h4>
                <table id="tblInventory" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th>Unidades</th>
                            <th>Fecha de registro</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <div class="form-group">
            <label for="txtProduct" class="form-label mt-4">Producto</label>
            <select class="form-select" id="txtProducto" name="txtProduct"></select>
        </div>
        <div class="form-group">
            <label for="txtInventoryQuantity" class="form-label mt-4">Unidades del producto</label>
            <input type="text" class="form-control" id="txtInventoryQuantity">
        </div>
        <div class="form-group">
            <label for="txtInventoryPrice" class="form-label mt-4">Precio por unidad</label>
            <input type="text" class="form-control" id="txtInventoryPrice">
        </div>
        <p></p>
        <button id="btnCreate" class="source-button btn btn-primary btn-xs" type="button" tabindex="8">Crear</button>
        <button id="btnUpdate" class="source-button btn btn-primary btn-xs" type="button" tabindex="8">Actualizar</button>
        <button id="btnCancel" class="source-button btn btn-primary btn-xs" type="button" tabindex="8">Cancelar</button>

    </fieldset>
</form>
